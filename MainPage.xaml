<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SoundBrewPOS.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SoundBrewPOS.Controls"
    xmlns:data="clr-namespace:SoundBrewPOS.Data"
    xmlns:local="clr-namespace:SoundBrewPOS.Converters"
    xmlns:models="clr-namespace:SoundBrewPOS.Models"
    xmlns:vm="clr-namespace:SoundBrewPOS.ViewModels"
    x:DataType="vm:HomeViewModel"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!--  BooleanToColorConverter converts IsSelected to colors  -->
            <local:BooleanToColorConverter x:Key="BooleanToColorConverter" />
            <!--<Style TargetType="Label" x:Key="Currencylbl">
                <Setter Property="" Value=""/>
            </Style>-->
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="0.75*, 0.25*">
        <!--  Main Content Section  -->
        <Grid
            Grid.Column="0"
            Padding="15"
            RowDefinitions="Auto,Auto,*"
            RowSpacing="10">

            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontFamily="PoppinsBold"
                FontSize="24"
                HorizontalOptions="Start"
                Text="Sound and Brew" />


            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MenuCategoryModel">
                        <Border
                            Margin="5"
                            Padding="20,10"
                            Background="{Binding IsSelected, Converter={StaticResource BooleanToColorConverter}}"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0">

                            <HorizontalStackLayout Spacing="5">
                                <Image
                                    HeightRequest="20"
                                    Source="{Binding Icon}"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />
                                <Label
                                    FontSize="16"
                                    Text="{Binding Name}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=SelectCategoryCommand}" CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Grid Grid.Row="2">
                <!--  CollectionView for the Items  -->
                <CollectionView ItemsSource="{Binding MenuItems}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="10"
                            Orientation="Vertical"
                            Span="4"
                            VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="data:MenuItem">
                            <Border
                                Padding="10"
                                Stroke="#DDD"
                                StrokeShape="RoundRectangle 10">
                                <VerticalStackLayout Spacing="3">
                                    <Border
                                        Background="{StaticResource OrderSummaryColor}"
                                        HeightRequest="150"
                                        StrokeThickness="0">
                                        <Image
                                            Aspect="Fill"
                                            HeightRequest="170"
                                            HorizontalOptions="Center"
                                            Source="{Binding Icon}"
                                            VerticalOptions="Center"
                                            WidthRequest="250" />
                                    </Border>
                                    <Label
                                        FontAttributes="Bold"
                                        FontFamily="PoppinsBold"
                                        FontSize="14"
                                        Text="{Binding Name}"
                                        VerticalOptions="Center" />
                                    <Label
                                        FontFamily="PoppinsRegular"
                                        FontSize="12"
                                        Text="{Binding Description}" />
                                    <FlexLayout
                                        Padding="10"
                                        AlignItems="Center"
                                        JustifyContent="SpaceBetween">
                                        <Label
                                            FontAttributes="Bold"
                                            FontFamily="PoppinsBold"
                                            FontSize="16"
                                            Text="{Binding Price, StringFormat='₱{0:N2}'}"
                                            TextColor="Maroon"
                                            VerticalOptions="Center" />

                                        <ImageButton
                                            Margin="0,0,0,1"
                                            BackgroundColor="{StaticResource OrderSummaryColor}"
                                            BorderColor="Transparent"
                                            Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=AddToCartCommand}"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="5"
                                            HeightRequest="25"
                                            Source="bag.png"
                                            WidthRequest="25" />
                                    </FlexLayout>
                                </VerticalStackLayout>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=AddToCartCommand}" CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <BoxView
                    HorizontalOptions="Fill"
                    IsVisible="{Binding IsBusy}"
                    Opacity="0.5"
                    VerticalOptions="Fill"
                    Color="{StaticResource OrderSummaryColor}" />
                <ActivityIndicator
                    HeightRequest="25"
                    HorizontalOptions="Center"
                    IsRunning="{Binding IsBusy}"
                    VerticalOptions="Center"
                    WidthRequest="25"
                    Color="Maroon" />
            </Grid>
        </Grid>
        <Grid
            Grid.Column="1"
            Padding="10"
            BackgroundColor="{StaticResource OrderSummaryColor}"
            RowDefinitions="Auto,*,Auto">
            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Order Summary" />
                <controls:CurrentDateTimeControl />
            </VerticalStackLayout>
            <!--  Main Content Section  -->
            <Grid
                Grid.Row="1"
                Padding="5"
                BackgroundColor="{StaticResource Flyout}">
                <CollectionView ItemsSource="{Binding CartItems}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:CartModel">
                            <Grid>
                                <Border Padding="5" BackgroundColor="{StaticResource OrderSummaryColor}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="60,*" ColumnSpacing="10">
                                        <Border
                                            Grid.Column="0"
                                            BackgroundColor="LightGray"
                                            HeightRequest="60"
                                            StrokeShape="RoundRectangle 10"
                                            WidthRequest="60">
                                            <Image
                                                Aspect="Fill"
                                                HeightRequest="60"
                                                Source="{Binding Icon}"
                                                WidthRequest="60" />
                                        </Border>
                                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                                            <Label
                                                FontAttributes="Bold"
                                                FontFamily="PoppinsRregular"
                                                FontSize="14"
                                                Text="{Binding Name}" />
                                            <Grid ColumnDefinitions="Auto,*">
                                                <Label
                                                    Grid.Column="0"
                                                    Margin="0,0,10,0"
                                                    FontAttributes="Bold"
                                                    FontFamily="PoppinsRegular"
                                                    FontSize="18"
                                                    Text="{Binding Price, StringFormat='₱{0:N2}'}"
                                                    TextColor="Maroon" />
                                                <Grid
                                                    Grid.Column="1"
                                                    ColumnDefinitions="*,2*,*"
                                                    HorizontalOptions="End"
                                                    WidthRequest="90">
                                                    <ImageButton
                                                        Grid.Column="0"
                                                        Padding="5"
                                                        Aspect="Fill"
                                                        BackgroundColor="Yellow"
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=DecreaseQuantityCommand}"
                                                        CommandParameter="{Binding .}"
                                                        CornerRadius="5"
                                                        MinimumHeightRequest="10"
                                                        MinimumWidthRequest="10"
                                                        Source="minus_sign.png" />
                                                    <Label
                                                        Grid.Column="1"
                                                        Padding="0,5,5,5"
                                                        BackgroundColor="White"
                                                        FontSize="15"
                                                        HorizontalOptions="Center"
                                                        HorizontalTextAlignment="Center"
                                                        Text="{Binding Quantity}"
                                                        TextColor="Maroon"
                                                        WidthRequest="60" />
                                                    <ImageButton
                                                        Grid.Column="2"
                                                        Padding="5"
                                                        Aspect="Fill"
                                                        BackgroundColor="Yellow"
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=IncreaseQuantityCommand}"
                                                        CommandParameter="{Binding .}"
                                                        CornerRadius="5"
                                                        MinimumHeightRequest="10"
                                                        MinimumWidthRequest="10"
                                                        Source="add.png" />

                                                </Grid>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                                <ImageButton
                                    Margin="0,0,0,10"
                                    Padding="5"
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=RemoveItemFromCartCommand}"
                                    CommandParameter="{Binding .}"
                                    HorizontalOptions="End"
                                    MinimumHeightRequest="20"
                                    MinimumWidthRequest="20"
                                    Source="cross.png"
                                    VerticalOptions="Start" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
            <VerticalStackLayout Grid.Row="2" Padding="15,10,15,0">
                <Border
                    Padding="10"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Maroon" Radius="10" />
                    </Border.Shadow>
                    <Grid>
                        <Grid
                            ColumnDefinitions="2*,3*"
                            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                            RowSpacing="3">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="Subtotal" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Text="{Binding Subtotal, StringFormat='₱{0:N2}'}" />
                            <HorizontalStackLayout
                                Grid.Row="1"
                                Grid.Column="0"
                                Spacing="5">
                                <Label Text="Tax" VerticalOptions="Center" />
                                <Label
                                    Padding="5,0"
                                    Background="{StaticResource Flyout}"
                                    Text="{Binding TaxPercentage, StringFormat='{0}%'}"
                                    TextColor="White"
                                    VerticalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding TaxPercentageClickCommand}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </HorizontalStackLayout>
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Text="{Binding TaxAamount, StringFormat='₱{0:N2}'}" />
                            <Border
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Stroke="Maroon"
                                StrokeThickness="0.5" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Text="Total" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Text="{Binding Total, StringFormat='₱{0:N2}'}" />
                            <Border
                                Grid.Row="4"
                                Grid.ColumnSpan="2"
                                Stroke="Maroon"
                                StrokeThickness="0.5" />
                            <Label
                                Grid.Row="5"
                                Grid.Column="0"
                                FontSize="12"
                                Text="Amount Paid" />
                            <Entry
                                x:Name="AmountPaidEntry"
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="0,0,0,10"
                                BackgroundColor="Transparent"
                                HeightRequest="30"
                                Keyboard="Numeric"
                                MinimumHeightRequest="15"
                                MinimumWidthRequest="15"
                                Placeholder="Enter Amount"
                                Text="{Binding AmountPaid, Mode=TwoWay}"
                                WidthRequest="100" />
                            <Border
                                Grid.Row="6"
                                Grid.ColumnSpan="2"
                                Stroke="Maroon"
                                StrokeThickness="0.5" />
                            <Label
                                Grid.Row="7"
                                Grid.Column="0"
                                Text="Change" />
                            <Label
                                Grid.Row="7"
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Text="{Binding Change, StringFormat='₱{0:F2}'}" />
                            <Border
                                Grid.Row="8"
                                Grid.ColumnSpan="2"
                                Stroke="Maroon"
                                StrokeThickness="0.5" />
                            <Grid
                                Grid.Row="9"
                                Grid.ColumnSpan="2"
                                ColumnDefinitions="Auto,Auto"
                                ColumnSpacing="50">
                                <Button
                                    Grid.Column="0"
                                    BackgroundColor="DarkOliveGreen"
                                    MinimumHeightRequest="20"
                                    MinimumWidthRequest="20"
                                    Pressed="Button_Pressed"
                                    Released="Button_Released"
                                    Text="Reciept " />
                                <Button
                                    Grid.Column="1"
                                    BackgroundColor="DarkOliveGreen"
                                    Command="{Binding PlaceOrderCommand}"
                                    MinimumHeightRequest="20"
                                    MinimumWidthRequest="20"
                                    Pressed="Button_Pressed"
                                    Released="Button_Released"
                                    Text="PAY" />
                            </Grid>

                        </Grid>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>
