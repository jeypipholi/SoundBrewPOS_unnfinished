<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SoundBrewPOS.OrdersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SoundBrewPOS.Controls"
    xmlns:data="clr-namespace:SoundBrewPOS.Data"
    xmlns:local="clr-namespace:SoundBrewPOS.Converters"
    xmlns:models="clr-namespace:SoundBrewPOS.Models"
    xmlns:vm="clr-namespace:SoundBrewPOS.ViewModels"
    Title="OrdersPage"
    x:DataType="vm:OrdersViewModel"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="th" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            <Style x:Key="td" TargetType="Label">
                <Setter Property="FontAttributes" Value="None" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="0.75*,0.25*">
        <!--  Orders List Section  -->
        <Grid
            Grid.Column="0"
            Padding="15"
            RowDefinitions="Auto,Auto,*"
            RowSpacing="15">
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="Orders" />

            <!--  Header Row  -->
            <Grid
                Grid.Row="1"
                BackgroundColor="Maroon"
                ColumnDefinitions="*,*,*,*,*">
                <Label
                    Grid.Column="0"
                    Padding="10,0"
                    Style="{StaticResource th}"
                    Text="Order Id" />
                <Label
                    Grid.Column="1"
                    Padding="10,0"
                    Style="{StaticResource th}"
                    Text="Order Date" />
                <Label
                    Grid.Column="2"
                    Padding="30,0"
                    Style="{StaticResource th}"
                    Text="Amount Paid" />
                <Label
                    Grid.Column="3"
                    Padding="50,0"
                    Style="{StaticResource th}"
                    Text="Items" />
                <Label
                    Grid.Column="4"
                    Padding="10,0"
                    Style="{StaticResource th}"
                    Text="" />
            </Grid>

            <!--  CollectionView for Orders  -->
            <CollectionView
                Grid.Row="2"
                ItemsSource="{Binding Orders}"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:OrderModel">
                        <Grid
                            BackgroundColor="Transparent"
                            ColumnDefinitions="*,*,*,*,*"
                            ColumnSpacing="2">
                            <Grid.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsSelected}"
                                    TargetType="Grid"
                                    Value="True">
                                    <Setter Property="BackgroundColor" Value="{StaticResource OrderSummaryColor}" />
                                </DataTrigger>
                            </Grid.Triggers>
                            <Label
                                Grid.Column="0"
                                Padding="30,0,0,0"
                                Style="{StaticResource td}"
                                Text="{Binding Id, StringFormat='#{0}'}" />
                            <Label
                                Grid.Column="1"
                                Padding="10,0"
                                Style="{StaticResource td}"
                                Text="{Binding OrderDate}" />
                            <Label
                                Grid.Column="2"
                                Padding="20,0"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource td}"
                                Text="{Binding TotalAmountPaid, StringFormat='â‚±{0:F2}'}" />
                            <Label
                                Grid.Column="3"
                                Padding="30,0"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource td}"
                                Text="{Binding TotalItemsCount, StringFormat='{0} Item(s)'}"
                                TextColor="DarkBlue"
                                TextDecorations="Underline">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:OrdersViewModel}}, Path=SelectOrderCommand}" CommandParameter="{Binding .}" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Button
                                Grid.Column="4"
                                Margin="0,5,0,0"
                                BackgroundColor="DarkCyan"
                                Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:OrdersViewModel}}, Path=SelectOrderCommand}"
                                CommandParameter="{Binding .}"
                                CornerRadius="10"
                                FontSize="10"
                                MinimumHeightRequest="25"
                                MinimumWidthRequest="30"
                                Text="View Items"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!--  Selected Order Details Section  -->
        <Grid
            Grid.Column="1"
            BackgroundColor="{StaticResource OrderSummaryColor}"
            RowDefinitions="Auto,*">
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                <Label
                    FontFamily="PoppinsBold"
                    FontSize="18"
                    Text="Selected Order Items" />
                <ImageButton
                    Grid.Column="1"
                    Margin="0,10,10,0"
                    Aspect="Fill"
                    BackgroundColor="Red"
                    Command="{Binding SelectOrderCommand}"
                    CornerRadius="5"
                    HorizontalOptions="End"
                    MinimumHeightRequest="30"
                    MinimumWidthRequest="30"
                    Source="x_regular.png"
                    VerticalOptions="Start" />
            </Grid>
            <ContentView
                Grid.Row="1"
                Padding="10"
                BackgroundColor="{StaticResource Flyout}">
                <CollectionView ItemsSource="{Binding OrderItems}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="data:OrderItem">
                            <Border Padding="5" BackgroundColor="{StaticResource OrderSummaryColor}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="60,*" ColumnSpacing="10">
                                    <Border
                                        Grid.Column="0"
                                        BackgroundColor="LightGray"
                                        HeightRequest="60"
                                        StrokeShape="RoundRectangle 10"
                                        WidthRequest="60">
                                        <Image
                                            Aspect="Fill"
                                            HeightRequest="60"
                                            Source="{Binding Icon}"
                                            WidthRequest="60" />
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                                        <Label
                                            FontAttributes="Bold"
                                            FontFamily="PoppinsRegular"
                                            FontSize="14"
                                            Text="{Binding Name}" />
                                        <Grid ColumnDefinitions="Auto,*">
                                            <HorizontalStackLayout Spacing="3">
                                                <Label
                                                    FontFamily="PoppinsRegular"
                                                    FontSize="14"
                                                    Text="{Binding Quantity}"
                                                    TextColor="Maroon" />
                                                <Label
                                                    FontFamily="PoppinsRegular"
                                                    FontSize="14"
                                                    Text="x"
                                                    TextColor="Maroon" />
                                                <Label
                                                    FontFamily="PoppinsRegular"
                                                    FontSize="14"
                                                    Text="{Binding Price, StringFormat='â‚±{0:F2}'}"
                                                    TextColor="Maroon" />
                                            </HorizontalStackLayout>
                                            <Label
                                                Grid.Column="1"
                                                Margin="0,0,5,0"
                                                FontSize="14"
                                                HorizontalOptions="End"
                                                Text="{Binding Amount, StringFormat='â‚±{0:F2}'}"
                                                TextColor="Maroon" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout>
                            <Image
                                HeightRequest="250"
                                HorizontalOptions="Center"
                                Source="sound_brew.png"
                                VerticalOptions="Center"
                                WidthRequest="200" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="25"
                                HorizontalOptions="Center"
                                Text="No Order Selected"
                                TextColor="White" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
            </ContentView>
        </Grid>
    </Grid>
</ContentPage>
